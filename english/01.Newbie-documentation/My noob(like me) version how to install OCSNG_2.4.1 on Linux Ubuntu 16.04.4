#open  OCSNG_UNIX_SERVER_2.4.1
cd OCSNG_UNIX_SERVER_2.4.1

#Now installation begins
sudo sh setup.sh
#usually approve everything - install with default options.

sudo a2enconf ocsinventory-reports
sudo a2enconf z-ocsinventory-server

#add access rights for www-data
sudo chown -R www-data:www-data /var/lib/ocsinventory-reports/
sudo service apache2 restart

#Using WEB browser
http://your_server_IP/ocsreports
#Configure Mysql
User:				root
Pasword:			password defined when installed ubuntu with LAMP
Name of datbase: 	ocsweb
DatabaseHost:		localhost  
#remove or rename install.php from /usr/share/ocsinventory-reports/ocsreports
rm /usr/share/ocsinventory-reports/ocsreports/install.php

mysql -u root -p
#enter your mysql passward which you set when installed Server
#My advice is to change default password for ocs
SET PASSWORD FOR 'ocs'@'localhost' = PASSWORD('YourTopSecretPassword');
SET PASSWORD FOR 'ocs'@'%' = PASSWORD('YourTopSecretPassword');
GRANT ALL PRIVILEGES ON `ocsweb` .* TO 'ocs'@'localhost' IDENTIFIED BY 'YourTopSecretPassword' WITH GRANT OPTION;
exit

# as file explorer and file editor I like to use mc
sudo apt install mc
#oepen mc and Change default edtitor: Options>Config>UseInternalEditor>save 
sudo mc 


